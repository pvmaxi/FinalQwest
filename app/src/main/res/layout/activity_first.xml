<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    android:background="@color/white">

<FrameLayout
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <fragment
            android:layout_gravity="center"
            android:id="@+id/one_fragment"
            class="ru.startandroid.develop.finalqwest.FirstFragment"
            android:layout_width="match_parent"
            android:layout_height="600dp"/>

</FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#109495"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/new_event"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="50dp"
                    app:srcCompat="@drawable/ic_first_window" />

                <ImageView
                    android:id="@+id/List"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="50dp"
                    app:srcCompat="@drawable/ic_list_events" />

                <ImageView
                    android:id="@+id/sort"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_sort_event" />
        </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>